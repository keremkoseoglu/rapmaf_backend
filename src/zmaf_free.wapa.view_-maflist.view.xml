<mvc:View                                                                                                                                                                                                                                                      
    controllerName="maffree.controller.MafList"                                                                                                                                                                                                                
    xmlns="sap.ui.table"                                                                                                                                                                                                                                       
    xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                
    xmlns:u="sap.ui.unified"                                                                                                                                                                                                                                   
    xmlns:c="sap.ui.core"                                                                                                                                                                                                                                      
    xmlns:m="sap.m"                                                                                                                                                                                                                                            
    height="100%">                                                                                                                                                                                                                                             
    <m:Page title="MAFs">                                                                                                                                                                                                                                      
    <m:content>                                                                                                                                                                                                                                                
        <Table id="tabMafList" rows="{/ZC_MAF_DOC}" selectionMode="Single" alternateRowColors="true">                                                                                                                                                          
            <extension>                                                                                                                                                                                                                                        
                <m:OverflowToolbar style="Clear">                                                                                                                                                                                                              
                    <m:Title id="title" text="MAF Documents"/>                                                                                                                                                                                                 
                    <m:ToolbarSpacer/>                                                                                                                                                                                                                         
                    <m:Button                                                                                                                                                                                                                                  
                        icon="sap-icon://create"                                                                                                                                                                                                               
                        press="onCreatePress"/>                                                                                                                                                                                                                
                    <m:Button                                                                                                                                                                                                                                  
                        icon="sap-icon://edit"                                                                                                                                                                                                                 
                        press="onMafDocPress"/>                                                                                                                                                                                                                
                    <m:Button                                                                                                                                                                                                                                  
                        icon="sap-icon://delete"                                                                                                                                                                                                               
                        press="onDeletePress"/>                                                                                                                                                                                                                
                </m:OverflowToolbar>                                                                                                                                                                                                                           
            </extension>                                                                                                                                                                                                                                       
            <columns>                                                                                                                                                                                                                                          
                <Column>                                                                                                                                                                                                                                       
                    <m:Label text="MAF ID" />                                                                                                                                                                                                                  
                    <template>                                                                                                                                                                                                                                 
                        <m:Text text="{MafId}" wrapping="false" />                                                                                                                                                                                             
                    </template>                                                                                                                                                                                                                                
                </Column>                                                                                                                                                                                                                                      
                <Column>                                                                                                                                                                                                                                       
                    <m:Label text="Description" />                                                                                                                                                                                                             
                    <template>                                                                                                                                                                                                                                 
                        <m:Text text="{Description}" wrapping="false" />                                                                                                                                                                                       
                    </template>                                                                                                                                                                                                                                
                </Column>                                                                                                                                                                                                                                      
                <Column>                                                                                                                                                                                                                                       
                    <m:Label text="Material" />                                                                                                                                                                                                                
                    <template>                                                                                                                                                                                                                                 
                        <m:Text text="{MaterialDescription}" wrapping="false" />                                                                                                                                                                               
                    </template>                                                                                                                                                                                                                                
                </Column>                                                                                                                                                                                                                                      
            </columns>                                                                                                                                                                                                                                         
        </Table>                                                                                                                                                                                                                                               
        </m:content>                                                                                                                                                                                                                                           
    </m:Page>                                                                                                                                                                                                                                                  
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               