<mvc:View xmlns:uxap="sap.uxap"                                                                                                                                                                                                                                
	controllerName="maffree.controller.MafDoc"                                                                                                                                                                                                                    
	xmlns="sap.uxap"                                                                                                                                                                                                                                              
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns:u="sap.ui.unified"                                                                                                                                                                                                                                      
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
	xmlns:m="sap.m"                                                                                                                                                                                                                                               
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
	xmlns:tab="sap.ui.table"                                                                                                                                                                                                                                      
	height="100%">                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
	<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">                                                                                                                                                                                           
		<headerTitle>                                                                                                                                                                                                                                                
			<ObjectPageHeader id="headerMaf"                                                                                                                                                                                                                            
							  objectTitle="{Description}"                                                                                                                                                                                                                           
							  objectSubtitle="{MafId}">                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                               
				<actions>                                                                                                                                                                                                                                                  
					<ObjectPageHeaderActionButton                                                                                                                                                                                                                             
						icon="sap-icon://edit"                                                                                                                                                                                                                                   
						text="Edit header"&nbsp;                                                                                                                                                                                                                                 
						tooltip="action"                                                                                                                                                                                                                                         
						press=".onPressHeader" />                                                                                                                                                                                                                                
				</actions>                                                                                                                                                                                                                                                 
			</ObjectPageHeader>                                                                                                                                                                                                                                         
		</headerTitle>                                                                                                                                                                                                                                               
		<headerContent>                                                                                                                                                                                                                                              
			<layout:VerticalLayout>                                                                                                                                                                                                                                     
				<m:Label text="Material"/>                                                                                                                                                                                                                                 
				<m:ObjectAttribute text="{MaterialDescription}"/>                                                                                                                                                                                                          
			</layout:VerticalLayout>                                                                                                                                                                                                                                    
			<layout:VerticalLayout>                                                                                                                                                                                                                                     
				<m:Label text="Size"/>                                                                                                                                                                                                                                     
				<m:ObjectAttribute text="{Width} x {Height} x {Length}"/>                                                                                                                                                                                                  
				<m:ObjectAttribute text="{SizeUom}"/>                                                                                                                                                                                                                      
			</layout:VerticalLayout>                                                                                                                                                                                                                                    
			<layout:VerticalLayout>                                                                                                                                                                                                                                     
				<m:Label text="Volume"/>                                                                                                                                                                                                                                   
				<m:ObjectAttribute text="{Volume} {VolumeUom}"/>                                                                                                                                                                                                           
			</layout:VerticalLayout>                                                                                                                                                                                                                                    
		</headerContent>                                                                                                                                                                                                                                             
		<sections>                                                                                                                                                                                                                                                   
			<!-- PRODUCTION -->                                                                                                                                                                                                                                         
			<ObjectPageSection titleUppercase="false" title="Production">                                                                                                                                                                                               
				<subSections>                                                                                                                                                                                                                                              
					<ObjectPageSubSection title=" " titleUppercase="false">                                                                                                                                                                                                   
						<blocks>                                                                                                                                                                                                                                                 
							<tab:TreeTable                                                                                                                                                                                                                                          
								id="treeTable"                                                                                                                                                                                                                                         
								selectionMode="Single"                                                                                                                                                                                                                                 
								enableColumnReordering="false"                                                                                                                                                                                                                         
								rows="{                                                                                                                                                                                                                                                
									path : 'to_production',                                                                                                                                                                                                                               
									parameters : {                                                                                                                                                                                                                                        
										countMode: 'Inline',                                                                                                                                                                                                                                 
										treeAnnotationProperties : {                                                                                                                                                                                                                         
											hierarchyLevelFor : 'BomLevel',                                                                                                                                                                                                                     
											hierarchyNodeFor : 'ComponentId',                                                                                                                                                                                                                   
											hierarchyParentNodeFor : 'ParentId',                                                                                                                                                                                                                
											hierarchyDrillStateFor : 'DrillState'                                                                                                                                                                                                               
										}                                                                                                                                                                                                                                                    
									}                                                                                                                                                                                                                                                     
								}">                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
								<tab:columns>                                                                                                                                                                                                                                          
									<tab:Column label="Material">                                                                                                                                                                                                                         
										<tab:template>                                                                                                                                                                                                                                       
											<m:ObjectIdentifier title="{MaterialDescription}" text="{Material}" />                                                                                                                                                                              
										</tab:template>                                                                                                                                                                                                                                      
									</tab:Column>                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                               
									<tab:Column label="ParentNodeID">                                                                                                                                                                                                                     
										<tab:template>                                                                                                                                                                                                                                       
											<m:NumericContent scale="{Uom}" value="{Quantity}" valueColor="Neutral" indicator="None" withMargin="false" />                                                                                                                                      
										</tab:template>                                                                                                                                                                                                                                      
									</tab:Column>                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                               
								</tab:columns>                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                               
							</tab:TreeTable>                                                                                                                                                                                                                                        
						</blocks>                                                                                                                                                                                                                                                
					</ObjectPageSubSection>                                                                                                                                                                                                                                   
					<ObjectPageSubSection>                                                                                                                                                                                                                                    
						<blocks><m:Button icon="sap-icon://edit" press=".onEditProd" /></blocks>                                                                                                                                                                                 
					</ObjectPageSubSection>                                                                                                                                                                                                                                   
				</subSections>                                                                                                                                                                                                                                             
			</ObjectPageSection>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
			<!-- FINANCE -->                                                                                                                                                                                                                                            
			<ObjectPageSection titleUppercase="false" title="Finance">                                                                                                                                                                                                  
				<subSections>                                                                                                                                                                                                                                              
					<ObjectPageSubSection title=" " titleUppercase="false">                                                                                                                                                                                                   
						<blocks>                                                                                                                                                                                                                                                 
							<m:Table id="tabFinance" inset="false" items="{to_finance}">                                                                                                                                                                                            
								<m:columns>                                                                                                                                                                                                                                            
									<m:Column>                                                                                                                                                                                                                                            
										<m:Text text="Material" />                                                                                                                                                                                                                           
									</m:Column>                                                                                                                                                                                                                                           
									<m:Column hAlign="Right">                                                                                                                                                                                                                             
										<m:Text text="Price" />                                                                                                                                                                                                                              
									</m:Column>                                                                                                                                                                                                                                           
								</m:columns>                                                                                                                                                                                                                                           
								<m:items>                                                                                                                                                                                                                                              
									<m:ColumnListItem>                                                                                                                                                                                                                                    
										<m:cells>                                                                                                                                                                                                                                            
											<m:ObjectIdentifier title="{MaterialDescription}" text="{Material}" />                                                                                                                                                                              
											<m:NumericContent scale="{CurrencyCode}/{PriceUnit}" value="{Price}" valueColor="Neutral" indicator="None" withMargin="false" />                                                                                                                    
										</m:cells>                                                                                                                                                                                                                                           
									</m:ColumnListItem>                                                                                                                                                                                                                                   
								</m:items>                                                                                                                                                                                                                                             
							</m:Table>                                                                                                                                                                                                                                              
						</blocks>                                                                                                                                                                                                                                                
					</ObjectPageSubSection>                                                                                                                                                                                                                                   
					<ObjectPageSubSection>                                                                                                                                                                                                                                    
						<blocks><m:Button icon="sap-icon://edit" press=".onEditFinance" /></blocks>                                                                                                                                                                              
					</ObjectPageSubSection>                                                                                                                                                                                                                                   
				</subSections>                                                                                                                                                                                                                                             
			</ObjectPageSection>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
			<!-- COST -->                                                                                                                                                                                                                                               
			<ObjectPageSection titleUppercase="false" title="Cost">                                                                                                                                                                                                     
				<subSections>                                                                                                                                                                                                                                              
					<ObjectPageSubSection title=" " titleUppercase="false">                                                                                                                                                                                                   
						<blocks>                                                                                                                                                                                                                                                 
							<m:Table id="tabCost" inset="false" items="{to_cost}">                                                                                                                                                                                                  
								<m:columns>                                                                                                                                                                                                                                            
									<m:Column>                                                                                                                                                                                                                                            
										<m:Text text="Material" />                                                                                                                                                                                                                           
									</m:Column>                                                                                                                                                                                                                                           
									<m:Column hAlign="Right">                                                                                                                                                                                                                             
										<m:Text text="Cost" />                                                                                                                                                                                                                               
									</m:Column>                                                                                                                                                                                                                                           
								</m:columns>                                                                                                                                                                                                                                           
								<m:items>                                                                                                                                                                                                                                              
									<m:ColumnListItem>                                                                                                                                                                                                                                    
										<m:cells>                                                                                                                                                                                                                                            
											<m:ObjectIdentifier title="{MaterialDescription}" text="{ComponentId}" />                                                                                                                                                                           
											<m:NumericContent scale="{CurrencyCode}" value="{Cost}" valueColor="Neutral" indicator="None" withMargin="false" />                                                                                                                                 
										</m:cells>                                                                                                                                                                                                                                           
									</m:ColumnListItem>                                                                                                                                                                                                                                   
								</m:items>                                                                                                                                                                                                                                             
							</m:Table>                                                                                                                                                                                                                                              
						</blocks>                                                                                                                                                                                                                                                
					</ObjectPageSubSection>                                                                                                                                                                                                                                   
				</subSections>                                                                                                                                                                                                                                             
			</ObjectPageSection>                                                                                                                                                                                                                                        
		</sections>                                                                                                                                                                                                                                                  
	</ObjectPageLayout>                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               