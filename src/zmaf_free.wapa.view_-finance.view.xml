<mvc:View controllerName="maffree.controller.Finance"                                                                                                                                                                                                          
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns:u="sap.ui.unified"                                                                                                                                                                                                                                      
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
    xmlns:f="sap.ui.layout.form"                                                                                                                                                                                                                               
	height="100%">                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
    <Table id="tabFinance" inset="false" items="{to_finance}">                                                                                                                                                                                                 
        <columns>                                                                                                                                                                                                                                              
            <Column><Text text="Material" /></Column>                                                                                                                                                                                                          
            <Column><Text text="Price" /></Column>                                                                                                                                                                                                             
            <Column><Text text="Currency" /></Column>                                                                                                                                                                                                          
            <Column><Text text="Price Unit" /></Column>                                                                                                                                                                                                        
        </columns>                                                                                                                                                                                                                                             
        <items>                                                                                                                                                                                                                                                
            <ColumnListItem>                                                                                                                                                                                                                                   
                <cells>                                                                                                                                                                                                                                        
                    <ObjectIdentifier title="{MaterialDescription}" text="{Material}" />                                                                                                                                                                       
                    <Input id="txtPrice" value="{Price}" type="Number" textAlign="Right" />                                                                                                                                                                    
                    <Input id="txtCurrency" value="{CurrencyCode}" />                                                                                                                                                                                          
                    <Input id="txtUnit" value="{PriceUnit}" type="Number" textAlign="Right" />                                                                                                                                                                 
                </cells>                                                                                                                                                                                                                                       
            </ColumnListItem>                                                                                                                                                                                                                                  
        </items>                                                                                                                                                                                                                                               
    </Table>                                                                                                                                                                                                                                                   
                                                                                                                                                                                                                                                               
    <Button id="btnSave" icon="sap-icon://save" press=".onSavePress" />                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
</mvc:View>                                                                                                                                                                                                                                                    