<mvc:View controllerName="maffree.controller.Header"                                                                                                                                                                                                           
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns:u="sap.ui.unified"                                                                                                                                                                                                                                      
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
    xmlns:f="sap.ui.layout.form"                                                                                                                                                                                                                               
	height="100%">                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
	<ObjectHeader                                                                                                                                                                                                                                                 
		title="MAF {MafId}"                                                                                                                                                                                                                                          
		class="sapUiResponsivePadding--header" >                                                                                                                                                                                                                     
		<statuses>                                                                                                                                                                                                                                                   
			<ObjectStatus                                                                                                                                                                                                                                               
				text="Approved"                                                                                                                                                                                                                                            
				state="Success"&nbsp;                                                                                                                                                                                                                                      
                visible="{Approved}" />                                                                                                                                                                                                                        
		</statuses>                                                                                                                                                                                                                                                  
		<ObjectAttribute text="Created by {CreatedBy} @ {CreatedAt}" />                                                                                                                                                                                              
        <ObjectAttribute text="Updated by {LastChangedBy} @ {LastChangedAt}" />                                                                                                                                                                                
		<ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />                                                                                                                                                                                            
		<ObjectAttribute text="{Description}" />                                                                                                                                                                                                                     
	</ObjectHeader>                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
    <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                            
		<f:SimpleForm id="SimpleFormToolbar"                                                                                                                                                                                                                         
			editable="true"                                                                                                                                                                                                                                             
			layout="ResponsiveGridLayout"                                                                                                                                                                                                                               
			labelSpanXL="4"                                                                                                                                                                                                                                             
			labelSpanL="3"                                                                                                                                                                                                                                              
			labelSpanM="4"                                                                                                                                                                                                                                              
			labelSpanS="12"                                                                                                                                                                                                                                             
			adjustLabelSpan="false"                                                                                                                                                                                                                                     
			emptySpanXL="0"                                                                                                                                                                                                                                             
			emptySpanL="4"                                                                                                                                                                                                                                              
			emptySpanM="0"                                                                                                                                                                                                                                              
			emptySpanS="0"                                                                                                                                                                                                                                              
			columnsXL="2"                                                                                                                                                                                                                                               
			columnsL="1"                                                                                                                                                                                                                                                
			columnsM="1"                                                                                                                                                                                                                                                
			singleContainerFullSize="false"                                                                                                                                                                                                                             
			ariaLabelledBy="Title1" >                                                                                                                                                                                                                                   
			<f:toolbar>                                                                                                                                                                                                                                                 
				<Toolbar id="TB1">                                                                                                                                                                                                                                         
					<Title id="Title1" text="MAF Header"/>                                                                                                                                                                                                                    
					<ToolbarSpacer />                                                                                                                                                                                                                                         
					<Button icon="sap-icon://save" press=".onSavePress" />                                                                                                                                                                                                    
				</Toolbar>                                                                                                                                                                                                                                                 
			</f:toolbar>                                                                                                                                                                                                                                                
            <f:content>                                                                                                                                                                                                                                        
				<Label text="MAF Description" />                                                                                                                                                                                                                           
				<Input id="txtDescription" value="{Description}" />                                                                                                                                                                                                        
				<Label text="Currency" />                                                                                                                                                                                                                                  
				<Input&nbsp;                                                                                                                                                                                                                                               
                    id="txtCurrency"&nbsp;                                                                                                                                                                                                                     
                    value="{CurrencyCode}"&nbsp;                                                                                                                                                                                                               
                    showSuggestion="true"                                                                                                                                                                                                                      
                    suggestionItems="{/I_Currency}">                                                                                                                                                                                                           
                    <suggestionItems>                                                                                                                                                                                                                          
				        <c:Item text="{Currency}" />                                                                                                                                                                                                                       
		        	</suggestionItems>                                                                                                                                                                                                                                  
                </Input>                                                                                                                                                                                                                                       
				<Label text="Approved" />                                                                                                                                                                                                                                  
				<CheckBox id="chkApproved" selected="{Approved}" />                                                                                                                                                                                                        
				<Label text="Material" />                                                                                                                                                                                                                                  
				<Input id="txtMaterial" value="{MaterialDescription}" />                                                                                                                                                                                                   
				<Label text="Size" />                                                                                                                                                                                                                                      
				<Input id="txtWidth" value="{Width}" />                                                                                                                                                                                                                    
                <Input id="txtHeight" value="{Height}" />                                                                                                                                                                                                      
                <Input id="txtLength" value="{Length}" />                                                                                                                                                                                                      
                <Input&nbsp;                                                                                                                                                                                                                                   
                    id="txtSizeUom"&nbsp;                                                                                                                                                                                                                      
                    value="{SizeUom}"                                                                                                                                                                                                                          
                    showSuggestion="true"                                                                                                                                                                                                                      
                    suggestionItems="{/I_UnitOfMeasure}">                                                                                                                                                                                                      
                    <suggestionItems>                                                                                                                                                                                                                          
				        <c:Item text="{UnitOfMeasure}" />                                                                                                                                                                                                                  
		        	</suggestionItems>                                                                                                                                                                                                                                  
                </Input>                                                                                                                                                                                                                                       
                <Label text="Volume" />                                                                                                                                                                                                                        
                <Input id="txtVolume" value="{Volume}" />                                                                                                                                                                                                      
                <Input&nbsp;                                                                                                                                                                                                                                   
                    id="txtVolumeUom"&nbsp;                                                                                                                                                                                                                    
                    value="{VolumeUom}"&nbsp;                                                                                                                                                                                                                  
                    showSuggestion="true"                                                                                                                                                                                                                      
                    suggestionItems="{/I_UnitOfMeasure}">                                                                                                                                                                                                      
                    <suggestionItems>                                                                                                                                                                                                                          
				        <c:Item text="{UnitOfMeasure}" />                                                                                                                                                                                                                  
		        	</suggestionItems>                                                                                                                                                                                                                                  
                </Input>                                                                                                                                                                                                                                       
            </f:content>                                                                                                                                                                                                                                       
        </f:SimpleForm>                                                                                                                                                                                                                                        
    </VBox>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    