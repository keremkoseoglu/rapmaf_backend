<mvc:View controllerName="maffree.controller.Prod"                                                                                                                                                                                                             
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns:u="sap.ui.unified"                                                                                                                                                                                                                                      
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
    xmlns:f="sap.ui.layout.form"                                                                                                                                                                                                                               
    xmlns:tab="sap.ui.table"                                                                                                                                                                                                                                   
	height="100%">                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
    <tab:TreeTable                                                                                                                                                                                                                                             
        id="treeTable"                                                                                                                                                                                                                                         
        selectionMode="Single"                                                                                                                                                                                                                                 
        enableColumnReordering="false"                                                                                                                                                                                                                         
        rows="{                                                                                                                                                                                                                                                
            path : 'to_production',                                                                                                                                                                                                                            
            parameters : {                                                                                                                                                                                                                                     
                countMode: 'Inline',                                                                                                                                                                                                                           
                treeAnnotationProperties : {                                                                                                                                                                                                                   
                    hierarchyLevelFor : 'BomLevel',                                                                                                                                                                                                            
                    hierarchyNodeFor : 'ComponentId',                                                                                                                                                                                                          
                    hierarchyParentNodeFor : 'ParentId',                                                                                                                                                                                                       
                    hierarchyDrillStateFor : 'DrillState'                                                                                                                                                                                                      
                }                                                                                                                                                                                                                                              
            }                                                                                                                                                                                                                                                  
        }">                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
        <tab:columns>                                                                                                                                                                                                                                          
            <tab:Column label="Material">                                                                                                                                                                                                                      
                <tab:template>                                                                                                                                                                                                                                 
                    <Input&nbsp;                                                                                                                                                                                                                               
                        id="txtMaterial"&nbsp;                                                                                                                                                                                                                 
                        value="{Material}"&nbsp;                                                                                                                                                                                                               
                        showSuggestion="true"                                                                                                                                                                                                                  
                        suggestionItems="{/ZI_MAF_MATERIAL}">                                                                                                                                                                                                  
                        <suggestionItems>                                                                                                                                                                                                                      
                            <c:Item text="{Material}" />                                                                                                                                                                                                       
                        </suggestionItems>                                                                                                                                                                                                                     
                    </Input>                                                                                                                                                                                                                                   
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
            <tab:Column label="Quantity">                                                                                                                                                                                                                      
                <tab:template>                                                                                                                                                                                                                                 
                    <Input id="txtQuantity" value="{Quantity}" type="Number" />                                                                                                                                                                                
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
            <tab:Column label="UOM">                                                                                                                                                                                                                           
                <tab:template>                                                                                                                                                                                                                                 
                    <Input&nbsp;                                                                                                                                                                                                                               
                        id="txtUom"&nbsp;                                                                                                                                                                                                                      
                        value="{Uom}"&nbsp;                                                                                                                                                                                                                    
                        showSuggestion="true"                                                                                                                                                                                                                  
                        suggestionItems="{/I_UnitOfMeasure}">                                                                                                                                                                                                  
                        <suggestionItems>                                                                                                                                                                                                                      
                            <c:Item text="{UnitOfMeasure}" />                                                                                                                                                                                                  
                        </suggestionItems>                                                                                                                                                                                                                     
                    </Input>                                                                                                                                                                                                                                   
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
            <tab:Column label="Component ID">                                                                                                                                                                                                                  
                <tab:template>                                                                                                                                                                                                                                 
                    <Input id="txtComponentId" value="{ComponentId}" enabled="false" />                                                                                                                                                                        
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
            <tab:Column label="Parent ID">                                                                                                                                                                                                                     
                <tab:template>                                                                                                                                                                                                                                 
                    <Input id="txtParentId" value="{ParentId}" enabled="false" />                                                                                                                                                                              
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
            <tab:Column label="BOM level">                                                                                                                                                                                                                     
                <tab:template>                                                                                                                                                                                                                                 
                    <Input id="txtBomLevel" value="{BomLevel}" type="Number" enabled="false" />                                                                                                                                                                
                </tab:template>                                                                                                                                                                                                                                
            </tab:Column>                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
        </tab:columns>                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                               
    </tab:TreeTable>                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
    <Button id="btnCreate" icon="sap-icon://create" press=".onCreatePress" />                                                                                                                                                                                  
    <Button id="btnDel" icon="sap-icon://delete" press=".onDelPress" />                                                                                                                                                                                        
    <Button id="btnSave" icon="sap-icon://save" press=".onSavePress" />                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
</mvc:View>                                                                                                                                                                                                                                                    